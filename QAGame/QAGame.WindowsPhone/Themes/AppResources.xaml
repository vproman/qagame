<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:QAGame.Themes">
    <x:Double x:Key="SharedLargerSize">25.5</x:Double>
    <x:Double x:Key="SharedNormalSize">22</x:Double>
    <SolidColorBrush x:Key="SharedForegroundBrush"
                     Color="{Binding Source={StaticResource PhoneForegroundBrush}, Path=Color}"
                     Opacity="{Binding Source={StaticResource PhoneForegroundBrush}, Path=Opacity}"/>
</ResourceDictionary>
